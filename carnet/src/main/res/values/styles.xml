<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="dark_orange">#FA6900</color>
    <color name="light_orange">#F38630</color>
    <color name="light_blue">#69D2E7</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_orange</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="colorAccent">@color/light_orange</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>-->
    <!--<item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>-->
        <!--<item name="android:actionBarTabBarStyle">@style/AppTheme.ActionBar.TabBar</item>-->
        <!--<item name="circleButtonStyle">@style/AppTheme.CircleButton</item>-->
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <!--CIRCLE BUTTON-->

    <style name="AppTheme.CircleButton" parent="android:Widget.Holo.Light.Button.Toggle">

        <item name="android:layout_width">@dimen/add_nota_dialog_fragment_button_size</item>
        <item name="android:layout_height">@dimen/add_nota_dialog_fragment_button_size</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:layout_margin">@dimen/add_nota_dialog_fragmnet_button_margin</item>
        <item name="android:textColor">@color/dialog_add_nota</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-thin</item>
        <item name="android:textSize">@dimen/add_nota_dialog_fragment_button_text_size</item>
    </style>
</resources>
